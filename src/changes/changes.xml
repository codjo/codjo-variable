        <release version="1.16" date="2007-03-15" description="Correctif">
            <action dev="villard,catteo" type="fix">
               Correction d'un bug lorsque deux variables sont contigües.
            </action>
        </release>
        <release version="1.15" date="2007-02-08" description="Correctif">
            <action dev="boissie,catteo,gonnot" type="fix">
               Correction d'un bug lorsque la valeur d'une variable contenait le symbole séparateur ($).
            </action>
        </release>
        <release version="1.14" date="2005-12-08" description="Nouvelle méthode">
